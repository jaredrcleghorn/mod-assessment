{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Campus",
  "description": "A campus, the second-level location unit",
  "type": "object",
  "properties": {
    "id": {
      "description": "The unique identifier for the campus",
      "type": "string"
    },
    "name": {
      "description": "The name of the campus",
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [ "name" ]
}
