{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Campus",
  "description": "A campus, the second-level location unit",
  "type": "object",
  "allOf": [
    {
      "$ref": "location-unit.schema.json"
    }
  ],
  "properties": {
    "libraries": {
      "description": "A list of the libraries under the campus",
      "type": "array",
      "items": {
        "$ref": "library.schema.json"
      }
    }
  },
  "additionalProperties": false,
  "required": [ "libraries" ]
}
